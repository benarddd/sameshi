{
  "name": "DigitalBook",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Book title"
    },
    "author": {
      "type": "string",
      "description": "Book author"
    },
    "category": {
      "type": "string",
      "enum": [
        "fiction",
        "textbook",
        "reference",
        "science",
        "history",
        "literature",
        "arts"
      ],
      "description": "Book category"
    },
    "description": {
      "type": "string",
      "description": "Book description"
    },
    "cover_url": {
      "type": "string",
      "description": "Book cover image"
    },
    "file_url": {
      "type": "string",
      "description": "Link to the book file"
    },
    "isbn": {
      "type": "string",
      "description": "ISBN number"
    },
    "pages": {
      "type": "number",
      "description": "Number of pages"
    },
    "language": {
      "type": "string",
      "default": "Albanian",
      "description": "Book language"
    }
  },
  "required": [
    "title",
    "author",
    "category"
  ]
}